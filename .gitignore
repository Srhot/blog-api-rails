# Yüklenen dosyalar
/public/uploads/*
/public/system/*

# Master key (şifreler)
/config/master.key
/config/credentials/*.key

# Environment variables
.env
.env.*
!.env.example

# Sistem dosyaları
.DS_Store
Thumbs.db

# Editor dosyaları
/.vscode
/.idea
*.swp
*.swo
*~

# Ruby/Rails
/.bundle
/vendor/bundle
/.yardoc
/_yardoc/
/coverage/
/doc/
/pkg/
/spec/reports/
/tmp/

# Node modules (eğer frontend eklerseniz)
/node_modules
/yarn-error.log
/public/packs
/public/packs-test
